# --- AI PROVIDER KEYS ---
ANTHROPIC_API_KEY=your-key-here
OPENROUTER_API_KEY=your-key-here
# CURSOR_API_KEY=your-cursor-key-here
# GOOGLE_API_KEY=your-google-api-key-here (For Gemini CLI)
# GEMINI_API_KEY=your-gemini-api-key-here (Alternative for Gemini)
# GEMINI_CLI_PATH=npx  # Override if not in PATH
# COPILOT_CLI_PATH=npx # Override if not in PATH
# CURSOR_CLI_PATH=cursor

# --- REDIS / STATE MANAGEMENT ---
# Host and port for the DragonflyDB/Redis instance
REDIS_HOST=localhost
REDIS_PORT=6499

# Persistence settings
STATE_KEY=supervisor:state
STATE_DB=0

# Task Queue settings
QUEUE_NAME=tasks
QUEUE_DB=2

# --- SUPERVISOR BEHAVIOR ---
# Autonomous goal verification (set to false to disable)
IS_ENABLED_GOAL_COMPLETION_CHECK=false

# Circuit breaker TTL (seconds) for failing providers
CIRCUIT_BREAKER_TTL_SECONDS=86400

# Provider fallback order (e.g., gemini,copilot,ollama)
# CLI_PROVIDER_PRIORITY=copilot,ollama

# --- HELPER AGENT & DETERMINISTIC VALIDATION ---
# Mode for helper agent tasks (auto or manual)
HELPER_AGENT_MODE=auto

# Use a local Ollama model for helper tasks instead of cloud provider
USE_LOCAL_HELPER_AGENT=true
LOCAL_HELPER_MODEL=phi4-mini
OLLAMA_BASE_URL=http://localhost:11434

# Deterministic File Validation (AST/Content checks)
HELPER_DETERMINISTIC_ENABLED=true
HELPER_DETERMINISTIC_PERCENT=100
HELPER_DETERMINISTIC_MAX_FILES=2000
HELPER_DETERMINISTIC_MAX_BYTES=10485760

# --- LOGGING ---
# Set to false to disable performance-specific logging
PERFORMANCE_LOGGING_ENABLED=false

# --- UI CONFIGURATION (Optional) ---
# Port for the Supervisor UI Backend
PORT=3001
# Polling interval for UI state refresh (ms)
POLL_INTERVAL=60000
# Sandbox root for the UI file explorer
SANDBOX_ROOT=./sandbox

# --- SYSTEM ---
# NODE_ENV=development
